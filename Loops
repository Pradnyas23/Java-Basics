//While Loop
public class basicg {
    public static void main(String args[]){
        int counter = 0;
        while(counter<100){
            System.out.println("Hello World");
            counter++;
        }
        System.out.println("printed hw 100 times");
    }
}

//print 1 to 10
public class basicg {
    public static void main(String args[]){
        int num = 1;
        while(num<=10){
            System.out.println(num);
            num++;
        }
    }
}

public class basicg {
    public static void main(String args[]){
        int num = 1;
        while(num<=10){
            System.out.print(num+" ");
            num++;
        }
        //System.out.println();                               //If we want all 1 to 10 to print in one line then we can write code like this.
    }
}

//Print no from 1 to n
import java.util.*;
public class basicg {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int counter = 1;
        while(counter<n){
            System.out.println(counter);
            counter++;
        }
    }
}

//Print sum of first n natural numbers
import java.util.*;
public class basicg {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum =0;
        int i = 1;
        while(i<=n){
            sum = sum + i;     
            System.out.println(sum);              //here if you write stdout inside the loop then all nos are seen
            i++;
        }
    }
}

//For loop
public class basicg {
    public static void main(String args[]){
       for(int i = 1; i<=10;i++ ){
        System.out.println("hello world");
       }
    }
}


import java.util.*;
public class basicg {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum =0;
        int i = 1;
        while(i<=n){
            sum += i;     
            i++;
        }
        System.out.println("sum is " + sum);      //here writing stdout outside the loop will direct give you output
    }
}

//Print square pattern using for loop
public class basicg {
    public static void main(String args[]){
       for(int line = 1; line<=4;line++ ){
        System.out.println("****");
       }
    }
}

//Print square pattern using while loop
public class basicg {
    public static void main(String args[]){
        int line = 1;
        while(line<=4){
            System.out.println("****");
            line++;
        }
    }
}

//Reverse of a number
public class basicg{
    public static void main(String agrs[]){
        int n = 233;
        while(n>0){
            int ldg = n % 10;
            System.out.print(ldg);
            n = n / 10;
            
        }
        System.out.println();
    }
}

//Do while loop
public class basicg{
    public static void main(String agrs[]){
        int n = 1;
        do{
            System.out.println("Hello world");
            n++;
        }while(n<=10);
    }
}

//Break statement
public class basicg{
    public static void main(String agrs[]){
        for(int i = 1;i<=10;i++){
            if(i==3){
                break;
            }
            System.out.println(i);
        }

        System.out.println("I am out of loop");
        
    }
}

//Keep entering numbers till user enters a number multiple of 10
import java.util.*;
public class basicg{
    public static void main(String agrs[]){
        Scanner sc = new Scanner(System.in);

        do{
            int n = sc.nextInt();
            System.out.println(n);                  //Once user enters multiple of 10 then the loop gets exited.
            if(n % 10 ==0){
                break;
            }
        }while(true);   
    }
}

//Continue statement
import java.util.*;
public class basicg{
    public static void main(String agrs[]){
        for(int i =1;i<=5;i++){
            if(i==3){
                continue;
            }
            System.out.println(i);
        }
    }
}

//Display all numbers entered by user except multiples of 10
import java.util.*;
public class basicg{
    public static void main(String agrs[]){
        Scanner sc = new Scanner(System.in);
        
      do{
            int i = sc.nextInt();
            if(i%10==0){
                continue;
            }
            System.out.println(i);

        }while(true);
    }
}





