//If-Else statements
public class abc {
    public static void main(String[] args){
        int age = 22;
        if(age>=18){
            System.out.println("Adult:can drive,vote");
        }
        else{
            System.out.println("not adult");     //Output will be adult
        }
    }
}

public class abc {
    public static void main(String[] args){
        int age = 12;
        if(age>=18){
            System.out.println("Adult:can drive,vote");
        }
        else{
            System.out.println("not adult");
        }
    }
}                                                  //Output will be not adult

public class abc {
    public static void main(String[] args){
        int age = 14;
        if(age>=18){
            System.out.println("Adult:can drive,vote");
        }
        if(age>13 && age<18){
            System.out.println("Teenager");
        }
        else{
            System.out.println("not adult");            //Output will be teenager
        }
    }
}

//Find the largest no of two numbers;
public class abc {
    public static void main(String[] args){
        int a = 20;
        int b = 10;
        if(a>b){
            System.out.println(a);
        }
        else{
            System.out.println(b);
        }
    }
}

//Ternary Opearator
import java.util.*;
public class basicg {
    public static void main(String args[]){
        int number = 11;
        String type = ((number%2==0)? "even" : "odd");
        System.out.println(type);
    }
}

//Pass or Fail
import java.util.*;
public class basicg {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        if(num>33){
            System.out.println("Pass");               //using scanner
        }
        else{
            System.out.println("Fail");
        }
    }
} 

import java.util.*;
public class basicg {
    public static void main(String args[]){
        int num = 40;
        String result = ((num>33)? "Pass":"Fail");                 //Using ternary operator
        System.out.println(result);
    }
}

//switch statement
public class basicg {
    public static void main(String args[]){
        int num = 2;
        switch(num){
            case 1 : System.out.println("Burger");
                        break;
            case 2 : System.out.println("Pizza");
                        break;
            case 3 : System.out.println("rotti");
                        break;
            default : System.out.println("Wake up kid");   //If you dont apply break then wherever the statement has become true from  there everythng is printed.
        }
    }
}

//using char data type for switch statement
public class basicg {
    public static void main(String args[]){
        char ch = 'a';
        switch(ch){
            case 'a' : System.out.println("Burger");
                        break;
            case 'b' : System.out.println("Pizza");
                        break;
            case 'c' : System.out.println("rotti");
                        break;
            default : System.out.println("Wake up kid");   //If you dont apply break then wherever the statement has become true from  there everythng is printed.
        }
    }
}




